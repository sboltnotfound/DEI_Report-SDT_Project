          <span>&#8221;</span>
          <aside> shubh </aside>
        </div>
        <%- DATA %>
      </div>
    </section>
    <section id="actions">
      <h2 style="text-align: center;">Actions</h2>
      <div style="clear:both;"></div>
      <div class="all_recommendations" id="all_recommendations">
        <div class="recommendation">
